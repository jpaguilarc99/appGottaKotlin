<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#84B6F4"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".FiveContentSecActivity">

    <TextView
        android:id="@+id/titleFiveSecForm"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/content_5"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCaracteristicasExplotacion"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="-Datos de la construcción:"
        android:layout_marginTop="8dp"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleFiveSecForm" />

    <TextView
        android:id="@+id/tvMaterialRevest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Método extracción del agua:"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCaracteristicasExplotacion"/>

    <RadioGroup
        android:id="@+id/rgExtraccionAgua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMaterialRevest">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:scaleX="1"
            android:scaleY="1"
            android:text="Bomba sumergible" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:scaleX="1"
            android:scaleY="1"
            android:text="Bomba manual" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:scaleX="1"
            android:scaleY="1"
            android:text="Molino de viento" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:scaleX="1"
            android:scaleY="1"
            android:text="Compresor" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:scaleX="1"
            android:scaleY="1"
            android:text="Motobomba" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:scaleX="1"
            android:scaleY="1"
            android:text="Surgencia natural" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:scaleX="1"
            android:scaleY="1"
            android:text="Manual" />

    </RadioGroup>

    <TextView
        android:id="@+id/tvTipoEnergia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo de energía:"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rgExtraccionAgua"/>

    <RadioGroup
        android:id="@+id/rgTipoEnergia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTipoEnergia">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:scaleX="1"
            android:scaleY="1"
            android:text="Eléctrica" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:scaleX="1"
            android:scaleY="1"
            android:text="Gasolina" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:scaleX="1"
            android:scaleY="1"
            android:text="ACPM" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:scaleX="1"
            android:scaleY="1"
            android:text="Eólica" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:scaleX="1"
            android:scaleY="1"
            android:text="Otra" />

    </RadioGroup>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/rgTipoEnergia">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleOneForm">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clase de bomba:"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="69dp"
                android:gravity="center"
                android:textSize="15sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleOneForm">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modelo:"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="127dp"
                android:gravity="center"
                android:textSize="15sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleOneForm">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Potencia:"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="119dp"
                android:gravity="center"
                android:textSize="15sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleOneForm">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prof. del punto de succión:"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:textSize="15sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <Button
        android:id="@+id/btnBackFiveSec"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="atrás"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnNextFiveSec"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="listo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>